<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f6f5f4"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageLogoBlue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@drawable/logo_blue" />

    <ImageView
        android:id="@+id/imageWelcome"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:src="@drawable/welcome" />

    <Button
        android:id="@+id/buttonEntrar"
        android:layout_width="wrap_content"
        android:layout_height="96dp"
        android:background="@drawable/button_entrar"
        android:onClick="clickEntrar" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <Button
            android:id="@+id/buttonSite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_site"
            android:onClick="clickSite" />

        <Button
            android:id="@+id/buttonContato"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@drawable/button_contato"
            android:onClick="clickContato" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonSobre"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="right|bottom"
        android:layout_marginTop="5dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/sobre_normal"
        android:onClick="clickSobre" />

</LinearLayout>