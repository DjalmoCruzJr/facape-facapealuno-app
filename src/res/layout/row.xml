<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/nomeDisciplina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:text="MATERIA"
        android:textAlignment="center"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000"
        android:textSize="12dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/ignNotas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeDisciplina"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/notaUm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="7,0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#737272"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/notaDois"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="8,0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#737272"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/notaTres"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="9,0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#737272"
            android:textSize="35dp" />

        <TextView
            android:id="@+id/notaQuatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="10,0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#737272"
            android:textSize="35dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ignMediaFalta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ignNotas"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textoMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="MÃ©dia:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/notaMedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="8,5"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0050b2"
            android:textSize="30dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textoFaltas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Faltas:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/numFaltas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="6"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0050b2"
            android:textSize="30dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ignStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ignMediaFalta"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textoStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Status:"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#737272"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/resultadoStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingRight="10dp"
            android:text="Aprovados"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#0050b2"
            android:textSize="15dp"
            android:textStyle="bold" />

    </LinearLayout>


</RelativeLayout>