<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0050b2"
    tools:context="facape.br.facapealuno.Login">

    <ImageView
        android:id="@+id/imageLogoWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/logo_white" />

    <EditText
        android:id="@+id/loginMatricula"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:width="240dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Matricula"
        android:inputType="number"
        android:padding="5dp"
        android:textColorHint="#dedede" />

    <EditText
        android:id="@+id/loginSenha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/loginMatricula"
        android:layout_alignStart="@+id/loginMatricula"
        android:layout_alignLeft="@+id/loginMatricula"
        android:layout_marginTop="10dp"
        android:width="240dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Senha"
        android:inputType="textPassword"
        android:padding="5dp"
        android:textColorHint="#dedede" />


    <Button
        android:id="@+id/buttonLogin"
        android:layout_width="139.33dp"
        android:layout_height="36.33dp"
        android:layout_alignEnd="@+id/imageLogoWhite"
        android:layout_alignRight="@+id/imageLogoWhite"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@drawable/button_login"
        android:onClick="clickNotas" />

</RelativeLayout>